# Backup Files (Generated by Scripts)
# -----------------------------------------------------------------------------
backups/
*.backup
*.bak

# -----------------------------------------------------------------------------
# Language Manager Directories
# -----------------------------------------------------------------------------
# These are installed by language managers and shouldn't be in repo

# Python (uv, pyenv, etc.)
.python-version.local

# Node.js (fnm, nvm, etc.)
.nvmrc.local
.node-version.local

# Java (SDKMAN)
.java-version.local

# Rust
.rust-version.local

# Go
.go-version.local

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# IDE files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Log files
*.log
logs/

# Temporary files
tmp/
temp/
.tmp/

# -----------------------------------------------------------------------------
# Homebrew
# -----------------------------------------------------------------------------
# Don't ignore Homebrew formulas in formulas/ directory
# but ignore any generated files
formulas/*.bottle.*
formulas/.brew_home/

# -----------------------------------------------------------------------------
# Git
# -----------------------------------------------------------------------------
# Don't ignore .gitmodules but ignore git-specific temp files
.git/hooks/pre-commit.local
.git/hooks/pre-push.local

# -----------------------------------------------------------------------------
# Testing & Development
# -----------------------------------------------------------------------------
# Test coverage
.coverage
htmlcov/
.pytest_cache/
.tox/

# Docker
.dockerignore.local

# -----------------------------------------------------------------------------
# Documentation (Auto-generated)
# -----------------------------------------------------------------------------
# Keep README.md but ignore auto-generated docs
docs/_build/
*.md.backup

# -----------------------------------------------------------------------------
# Local Configuration Overrides
# -----------------------------------------------------------------------------
# Allow users to have local overrides without committing them
*.local
.local/
local/

# Local environment variables
.env.local
.env.*.local

